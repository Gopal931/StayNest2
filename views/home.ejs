
<% layout("/layouts/boilerplate.ejs") -%>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">StayNes</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/listings">Browse Listings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/listings/new">Add Listing</a></li>
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4">Welcome to StayNes</h1>
            <p class="lead">Discover amazing places to stay, curated just for you.</p>
            <form action="/listings" method="GET" class="d-flex justify-content-center mt-4">
                <input type="text" name="search" class="form-control w-50 me-2" placeholder="Search locations or listings...">
                <button class="btn btn-light">Search</button>
            </form>
        </div>
    </header>

    <!-- Featured Listings (Optional dynamic loop) -->
    <section class="container my-5">
        <h2 class="text-center mb-4">Featured Listings</h2>
        <div class="row">
            <% allListings.slice(0, 3).forEach(listing => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="<%= listing.image || 'https://source.unsplash.com/400x300/?hotel,stay' %>" class="card-img-top" alt="<%= listing.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"><%= listing.location %>, <%= listing.country %></p>
                            <p class="card-text text-muted">₹<%= listing.price %>/night</p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">© <%= new Date().getFullYear() %> StayNes. All rights reserved.</p>
    </footer>

</body>

